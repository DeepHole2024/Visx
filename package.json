{
  "name": "@vx/dev",
  "version": "0.0.1",
  "description": "Low-level visualization components",
  "main": "index.js",
  "scripts": {
    "test": "lerna bootstrap && jest",
    "docs": "npm run docs:gen && node ./scripts/docs/index.js",
    "docs:gen": "lerna run docs",
    "prepare-release": "git checkout master && git pull --rebase origin master && npm run docs && lerna updated",
    "release": "npm run prepare-release && lerna publish --exact",
    "lint": "eslint \"packages/**/*.js\" --config \"./.eslintrc\"",
    "lint:fix": "eslint \"packages/**/*.js\" --config \"./.eslintrc\" --fix",
    "format": "prettier-eslint \"packages/**/*.js\" --config \"./.eslintrc\" --write",
    "precommit": "lint-staged"
  },
  "eslintConfig": {
    "extends": "airbnb"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "keywords": [
    "react",
    "d3",
    "visualization",
    "vx",
    "charts"
  ],
  "author": "@hshoff",
  "contributors": [
    {
      "name": "Chris Williams",
      "url": "https://github.com/williaster"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/runtime-corejs3": "^7.5.5",
    "@irbnb/config-babel": "^1.2.4",
    "@irbnb/config-eslint": "^1.3.1",
    "@irbnb/config-jest": "^1.2.4",
    "@irbnb/config-prettier": "^1.1.4",
    "@irbnb/config-typescript": "^1.2.1",
    "@irbnb/nimbus": "^1.4.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.0.6",
    "core-js": "^3.2.1",
    "coveralls": "^2.13.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.1.0",
    "fs-jetpack": "^1.3.0",
    "husky": "^3.0.0",
    "lerna": "^3.15.0",
    "lint-staged": "^7.0.4",
    "marked": "^0.3.19",
    "prettier": "^1.18.2",
    "raf": "^3.4.0",
    "react": "^15.0.0-0 || ^16.0.0-0",
    "react-docgen": "^2.21.0",
    "react-dom": "^15.0.0-0 || ^16.0.0-0",
    "react-test-renderer": "^16.8.6",
    "regenerator-runtime": "^0.10.5",
    "typescript": "^3.5.3"
  },
  "browserslist": [
    "last 3 chrome versions",
    "last 3 firefox versions",
    "last 3 safari versions",
    "last 3 edge versions"
  ],
  "nimbus": {
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "library": true,
      "react": true,
      "env": {
        "targets": false,
        "corejs": 3,
        "useBuiltIns": "usage"
      }
    }
  }
}
